---
import "@/styles/global.css";
interface Props {
  title: string;
  bodyClass?: string; 
}

const { title, bodyClass="" } = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class={`font-display bg-dark flex flex-col ${bodyClass}`}>
		<div class="z-0 opacity-30 pointer-events-none"></div>
			<slot />		
	</body>
</html>

<style>
    html, body {
        margin: 0;
        min-height: 100vh;
		min-width: 100vw;
        background-color: #182111;
    }
    
    div.absolute {
        position: fixed; 
        background-image: var(--image-hex-pattern);
        background-attachment: fixed;
        inset: 0;
    }
</style>
