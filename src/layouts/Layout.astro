---
import "@/styles/global.css";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-display bg-background-dark min-h-screen flex flex-col justify-center items-center relative">
		<div class="absolute inset-0 z-0 opacity-30 pointer-events-none"></div>
			<slot />		
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	div{
		background-image: var(--image-hex-pattern);
	}
</style>
