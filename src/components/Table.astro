<div class="overflow-x-auto mx-8 rounded-lg border border-tactical-olive/30 shadow-2xl bg-dark/20 backdrop-blur-sm">
  <table class="table table-zebra w-full font-display">
    <thead class="bg-table-head text-police uppercase tracking-widest text-small">
      <tr class="border-b border-tactical-olive/50">
        <th class="py-4">ID</th>
        <th>Nombre del Personal / Caso</th>
        <th>Fecha Registro</th>
        <th>Estado Operativo</th>
        <th class="text-right">Acciones</th>
      </tr>
    </thead>
    
    <tbody class="text-gray-300">
      <tr class="border-b border-tactical-olive/20 hover:bg-police/5 transition-colors group">
        <td class="font-mono text-police/80 text-xs">#POL-8821</td>
        <td class="font-bold text-light">Carlos Rodriguez Mendoza</td>
        <td class="text-xs">12 Feb 2026</td>
        <td>
          <div class="badge badge-success badge-outline gap-2 font-bold text-small py-3">
            <span class="w-1.5 h-1.5 rounded-full bg-success animate-pulse"></span>
            ACTIVO
          </div>
        </td>
        <td class="text-right">
          <div class="join">
            <button class="btn btn-ghost btn-xs join-item text-police hover:bg-police/20">
              <span class="material-icons text-small">visibility</span>
            </button>
            <button class="btn btn-ghost btn-xs join-item text-info hover:bg-info/20">
              <span class="material-icons text-small">edit</span>
            </button>
          </div>
        </td>
      </tr>

      <tr class="border-b border-tactical-olive/20 hover:bg-police/5 transition-colors group">
        <td class="font-mono text-police/80 text-xs">#POL-8819</td>
        <td class="font-bold text-light">Elena Sofia Vargas</td>
        <td class="text-xs">10 Feb 2026</td>
        <td>
          <div class="badge badge-warning badge-outline gap-2 font-bold text-small py-3">
            <span class="w-1.5 h-1.5 rounded-full bg-warning"></span>
            PENDIENTE
          </div>
        </td>
        <td class="text-right">
          <div class="join">
            <button class="btn btn-ghost btn-xs join-item text-police hover:bg-police/20">
              <span class="material-icons text-small">visibility</span>
            </button>
            <button class="btn btn-ghost btn-xs join-item text-info hover:bg-info/20">
              <span class="material-icons text-small">edit</span>
            </button>
          </div>
        </td>
      </tr>

      <tr class="border-b border-tactical-olive/20 hover:bg-police/5 transition-colors group">
        <td class="font-mono text-police/80 text-xs">#POL-8782</td>
        <td class="font-bold text-light">Lucia Fernandez</td>
        <td class="text-xs">05 Feb 2026</td>
        <td>
          <div class="badge badge-error badge-outline gap-2 font-bold text-small py-3">
            <span class="w-1.5 h-1.5 rounded-full bg-error"></span>
            INACTIVO
          </div>
        </td>
        <td class="text-right">
          <div class="join">
            <button class="btn btn-ghost btn-xs join-item text-police hover:bg-police/20">
              <span class="material-icons text-small">visibility</span>
            </button>
            <button class="btn btn-ghost btn-xs join-item text-info hover:bg-info/20">
              <span class="material-icons text-small">edit</span>
            </button>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>